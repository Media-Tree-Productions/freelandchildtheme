#! /bin/bash
OutFileName="merged-records.csv"
SaveAddress="/var/www/staging/wp-content/uploads/wpallimport/merged-records.csv"
i=0
if test -f merged-records.csv ; then
	if test -f ../inventory-backups/merged-records-old.csv ; then
		rm ../inventory-backups/merged-records-old.csv
	fi
	cp merged-records.csv ../inventory-backups/merged-records-old.csv
	rm merged-records.csv
fi
for filename in ./*.csv; do
        if [ "$filename" != "$OutFileName" ] ; then
                if [[ $i -eq 0 ]] ; then
                        head -1 "$filename" > "$OutFileName"
                fi
                tail -n +2 "$filename" >> "$OutFileName"
                ((i++))
        fi
done
if test -f "$SaveAddress" ; then
	rm "$SaveAddress"
	cp "$OutFileName" "$SaveAddress"
fi